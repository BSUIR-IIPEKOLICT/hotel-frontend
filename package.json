{
  "name": "hotel",
  "version": "1.0.0",
  "private": true,
  "description": "*hotel*\r >Hotel MERN app (task on subject \"Structures and databases\" in BSUIR)",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently npm:dev:*",
    "dev:client": "cd client && npm run start",
    "dev:server": "cd server && npm run dev",
    "start": "concurrently npm:start:*",
    "start:client": "cd client && npm run build",
    "start:server": "cd server && npm run prod",
    "deploy": "concurrently npm:deploy:*",
    "deploy:client": "cd client && npm install && npm run build",
    "deploy:server": "cd server && npm install && npm run prod",
    "heroku-postbuild": "npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IIPEKOLICT/hotel.git"
  },
