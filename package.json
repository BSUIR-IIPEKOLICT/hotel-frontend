  "bugs": {
    "url": "https://github.com/IIPEKOLICT/hotel/issues"
  },
  "homepage": "https://github.com/IIPEKOLICT/hotel#readme",
  "devDependencies": {
    "concurrently": "^6.4.0",
    "prettier": "2.5.0"
  },
  "engines": {
    "node": "16.x"
  }
}
